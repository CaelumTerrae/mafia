#index
	float: left
	width 500px
	height auto
	vertical-align: bottom
	
#indexpic
	width 220px
	height auto
	  
h1
	text-align center
	text-transform uppercase

.form-box
	width 50%
	margin 0px 45%
	padding 0px
	text-align right
	text-transform uppercase
	font-size:20px
	font-family: Helvetica Neue, Helvetica, Arial, sans-serif

.fb-item
	margin-bottom 20px

.fb-item input
	width 100%
	font-size 20em
	color red
	padding 10px
	placeholder-color red
	height 80px
	text-align right
	text-transform uppercase
	font-size:20px
	font-family: Helvetica Neue, Helvetica, Arial, sans-serif
	
.fb-item:focus
	border-color #003366

#submit
	bottom 0 
	left 0 
	width 103%
	height 40px
	background white
	padding 40px
	text-align center
	color red
	font-size 1.4em
	text-transform upper
	border none
	
#submit:hover
	opacity 0.8
	cursor pointer


#title
	position absolute
	top 0
	left 15px
	font-size 2em


#them
	height 100%
	width 100%
	display table
	padding-bottom 80px
	
#theiricons
	vertical-align middle
	display table-cell
	height 100%

#you 
	text-align center
	
#you img
	width 250px
	height auto
	padding-bottom 80px

#messages 
	list-style-type: none; 
	margin: 0; 
	padding: 0; 
#messages li 
	padding: 5px 10px; 
#messages li:nth-child(odd)  
	background: #eee; 

	
	
